{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "SDL2",
      "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
      "args": [
        "-g",
        "${workspaceFolder}\\src\\*.cpp",
        "-I",
        "${workspaceFolder}\\include",
        "-L",
        "${workspaceFolder}\\lib",
        "-o",
        "${workspaceFolder}\\bin\\debug\\game.exe",
        "-lmingw32",
        "-lSDL2main",
        "-lSDL2",
        "-lSDL2_image",
        "-lzmq-mt-4_3_5"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
